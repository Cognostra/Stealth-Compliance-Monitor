# ------------------------------------------------------------------
# STEALTH COMPLIANCE MONITOR - CONFIGURATION TEMPLATE
# Copy this file to .env and fill in your values
# ------------------------------------------------------------------

# [Target Configuration - REQUIRED]
# The primary URL to scan. Used for crawling, visual regression, and security checks.
LIVE_URL=https://loadout.app

# [Authentication - REQUIRED]
# Test credentials for the AuthService to log in
TEST_EMAIL=test_user@example.com
TEST_PASSWORD=secure_password_here

# [Security & Proxy]
# Route traffic through OWASP ZAP for passive scanning.
# Default: http://localhost:8080 (Set to empty to disable proxy if supported)
ZAP_PROXY_URL=http://localhost:8080

# [Crawler Tuning]
# Delays between actions to simulate human behavior (in milliseconds)
MIN_DELAY_MS=2000
MAX_DELAY_MS=5000

# [Output Paths]
# Directory for screenshots of defects/visual regression
SCREENSHOTS_DIR=./screenshots
# Directory for generation of JSON and Markdown reports
REPORTS_DIR=./reports

# [Politeness]
# Custom User-Agent string to identify the bot
USER_AGENT=LSCM-Bot/1.0 (Live Site Compliance Monitor)

# [AI Remediation]
# Enable AI-generated code fixes (mock or real)
ENABLE_AI=false
# OpenAI API Key (Required if ENABLE_AI=true)
OPENAI_API_KEY=sk-...

# [Future / Optional Capabilities]
# These keys are reserved for future features:
# IS_MOBILE=false
# DISCORD_WEBHOOK_URL=
