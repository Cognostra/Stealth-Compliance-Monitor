# Target Configuration
LIVE_URL=https://example.com

# Authentication (Optional)
TEST_EMAIL=user@example.com
TEST_PASSWORD=securepassword
AUTH_COOKIE_NAME=session_token
AUTH_TOKEN_VALUE=

# Multi-Device Emulation
# Comma-separated list of Playwright device names (e.g. desktop, iPhone 12, Pixel 5)
DEVICES=desktop

# Scanning & Crawling
CRAWLER_MAX_PAGES=15
CRAWLER_CONCURRENCY=3
USER_AGENT=LSCM-Bot/1.0 (Live Site Compliance Monitor)
MIN_DELAY_MS=2000
MAX_DELAY_MS=5000

# Security & Proxy (ZAP)
# Leave ZAP_PROXY_URL empty to disable proxy
ZAP_PROXY_URL=http://127.0.0.1:8080
ZAP_API_KEY=

# Active Scanning Guardrails
# Active scanning is disabled unless explicitly allowed
ACTIVE_SCAN_ALLOWED=false
# Comma-separated list of allowed targets (domain or full URL)
ACTIVE_SCAN_ALLOWLIST=example.com

# Reporting & Notifications
REPORTS_DIR=./reports
SCREENSHOTS_DIR=./screenshots
WEBHOOK_URL=
WEBHOOK_EVENTS=critical
SIEM_ENABLED=false

# AI Features (Optional)
ENABLE_AI=false
OPENAI_API_KEY=

# Local LLM Remediation via Ollama (v3.1)
# Provider: "ollama" for local, "openai" for OpenAI API
AI_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=codellama

# Flutter Web Semantics (v3.1)
FLUTTER_SEMANTICS_ENABLED=false

# Fintech Profile (v3.1)
# Comma-separated list of additional miner domains to block
FINTECH_CUSTOM_MINER_DOMAINS=

# Custom Checks
CUSTOM_CHECKS_ENABLED=true
CUSTOM_CHECKS_DIR=./custom_checks

# Python Plugin Bridge (v3.1)
PYTHON_CHECKS_ENABLED=false
PYTHON_EXECUTABLE=python3
PYTHON_CHECK_TIMEOUT=30000

# Deterministic Mode (for CI stability)
DETERMINISTIC_MODE=false
DETERMINISTIC_SEED=42

# Visual Regression Policy
VISUAL_DIFF_THRESHOLD=0.05
VISUAL_BASELINE_MAX_AGE_DAYS=30
VISUAL_BASELINE_AUTO_APPROVE=false

# Log Redaction
REDACTION_ENABLED=true

# Optional run tag for reports/logs
RUN_TAG=

# ========================================
# Debug Mode Configuration
# ========================================
# Run browser in headed mode (visible browser window)
DEBUG_HEADED=false
# Slow down operations by specified ms (useful for debugging)
DEBUG_SLOW_MO=0
# Open DevTools automatically when browser launches
DEBUG_DEVTOOLS=false
# Full debug mode (implies headed + devtools + slow-mo)
DEBUG_MODE=false

# ========================================
# Vulnerability Intelligence Enrichment
# ========================================
# Enable CVE/CVSS enrichment for findings
VULN_INTEL_ENABLED=true

# NVD API Key (recommended for higher rate limits)
# Without key: 5 requests per 30 seconds
# With key: 50 requests per 30 seconds
# Get your key at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# Enable exploit database cross-reference
VULN_INTEL_EXPLOITS=true

# Check CISA Known Exploited Vulnerabilities catalog
VULN_INTEL_KEV=true

# Enable CWE description enrichment
VULN_INTEL_CWE=true

# Cache TTL in minutes (default: 1440 = 24 hours)
VULN_INTEL_CACHE_TTL=1440

# Path to vulnerability intelligence cache file
VULN_INTEL_CACHE_PATH=./cache/vuln-intel-cache.json

# ========================================
# Report Branding & White-Label Options
# ========================================
# Custom company/organization name displayed in reports
# Default: "Stealth Compliance Monitor"
BRAND_COMPANY_NAME=

# URL to your company logo (PNG/SVG recommended, max 200x50px)
# Can be a URL or base64 data URI: data:image/svg+xml;base64,...
BRAND_LOGO_URL=

# Primary brand color (hex format)
# Used for accents, buttons, and highlights in reports
# Default: #3fb950 (green)
BRAND_PRIMARY_COLOR=#3fb950

# URL to external CSS file for advanced report styling
# Loaded after default styles, allowing full customization
BRAND_CUSTOM_CSS_URL=

# Custom footer text (replaces default "Stealth Compliance Monitor" credit)
# Example: "© 2024 Acme Corp. Security Team"
BRAND_FOOTER_TEXT=

# Custom report title prefix
# Appears before "Compliance Report" in headers
# Example: "Acme Corp" produces "Acme Corp Compliance Report"
BRAND_REPORT_TITLE=

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 1: Core Security (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable SBOM (Software Bill of Materials) scanning
SBOM_SCANNER_ENABLED=false

# Enable GraphQL deep security scanning (introspection, depth testing, batch queries)
GRAPHQL_SCANNER_ENABLED=false

# Enable WebSocket security auditing (plaintext, auth bypass, rate limiting)
WEBSOCKET_AUDITOR_ENABLED=false

# Enable CSP (Content Security Policy) violation collection and analysis
CSP_COLLECTOR_ENABLED=false

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 2: AI-Powered (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable Visual AI compliance checking (color contrast, alt text, brand compliance)
VISUAL_AI_COMPLIANCE_ENABLED=false

# Path to brand color palette JSON guide for visual compliance
# Format: { "primary": ["#hex"], "secondary": ["#hex"], "accent": ["#hex"], "forbidden": ["#hex"] }
BRAND_GUIDE_PATH=

# Enable browser fingerprinting detection (canvas, WebGL, audio, battery API)
FINGERPRINT_DETECTION_ENABLED=false

# Enable AI-generated test flow generation using LLM
AI_TEST_FLOW_GENERATOR_ENABLED=false

# Enable smart false positive filtering with confidence scoring
FALSE_POSITIVE_FILTER_ENABLED=false

# False positive filter confidence threshold (0.0-1.0, default: 0.3)
FP_FILTER_THRESHOLD=0.3

# Enable privacy policy analyzer (GDPR Article 13/14, CCPA compliance)
PRIVACY_POLICY_ANALYZER_ENABLED=false

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 3: Web Platform (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable WebRTC security analysis
WEBRTC_ANALYZER_ENABLED=false

# Enable PWA (Progressive Web App) security scanning
PWA_SCANNER_ENABLED=false

# Enable browser extension audit
EXTENSION_AUDIT_ENABLED=false

# Enable mobile security scanning (device orientation, touch gestures)
MOBILE_SECURITY_SCANNER_ENABLED=false

# Enable Shadow DOM & Web Components scanning
SHADOW_DOM_SCANNER_ENABLED=false

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 4: Infrastructure/DevSecOps (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable WebAssembly security scanning
WASM_SCANNER_ENABLED=false

# Enable container security scanning (Dockerfile, compose)
CONTAINER_SCANNER_ENABLED=false

# Enable Kubernetes security scanning (manifest analysis)
K8S_SCANNER_ENABLED=false

# Enable API contract testing (OpenAPI/Swagger validation)
API_CONTRACT_TESTING_ENABLED=false

# Enable chaos engineering tests (fault injection)
CHAOS_TESTING_ENABLED=false

# Enable multi-region compliance testing
MULTI_REGION_COMPLIANCE_ENABLED=false

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 5: Integrations (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable VS Code extension integration
VSCODE_INTEGRATION_ENABLED=false

# Enable GitHub App integration
GITHUB_INTEGRATION_ENABLED=false

# GitHub App credentials (required if GITHUB_INTEGRATION_ENABLED=true)
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_INSTALLATION_ID=

# Enable Postman/Newman integration
POSTMAN_INTEGRATION_ENABLED=false

# Postman API Key (required if POSTMAN_INTEGRATION_ENABLED=true)
POSTMAN_API_KEY=

# Enable JIRA/ServiceNow ticketing integration
TICKETING_INTEGRATION_ENABLED=false

# JIRA configuration (required if TICKETING_INTEGRATION_ENABLED=true and using JIRA)
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=

# ServiceNow configuration (required if TICKETING_INTEGRATION_ENABLED=true and using ServiceNow)
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# Enable Slack/Teams messaging integration
MESSAGING_INTEGRATION_ENABLED=false

# Slack configuration (required if MESSAGING_INTEGRATION_ENABLED=true and using Slack)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#security-alerts

# Microsoft Teams configuration (required if MESSAGING_INTEGRATION_ENABLED=true and using Teams)
TEAMS_WEBHOOK_URL=

# ═══════════════════════════════════════════════════════════════════════════════
# v3.2 FEATURE FLAGS - Phase 6: Enterprise (Default: disabled)
# ═══════════════════════════════════════════════════════════════════════════════
# Enable FAIR risk quantification
FAIR_RISK_QUANTIFICATION_ENABLED=false

# Organization annual revenue in USD (used for FAIR calculations)
FAIR_ORGANIZATION_REVENUE=10000000

# Enable compliance drift detection
DRIFT_DETECTION_ENABLED=false

# Enable third-party risk aggregation
THIRD_PARTY_RISK_ENABLED=false

# Third-party risk API keys (required if THIRD_PARTY_RISK_ENABLED=true)
SECURITYSCORECARD_API_KEY=
BITSIGHT_API_KEY=

# Enable real-time dashboard
REALTIME_DASHBOARD_ENABLED=false

# Dashboard refresh interval in milliseconds (default: 5000)
DASHBOARD_REFRESH_INTERVAL=5000

# Enable evidence vault for legal hold
EVIDENCE_VAULT_ENABLED=false

# Evidence vault storage path
EVIDENCE_VAULT_PATH=./evidence

# Evidence retention period in days (default: 2555 = 7 years)
EVIDENCE_RETENTION_DAYS=2555
