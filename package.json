{
    "name": "live-site-compliance-monitor",
    "version": "2.0.0",
    "type": "module",
    "description": "A read-only automated agent that navigates live production websites to verify user flows, performance metrics, and security headers",
    "main": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "node --import tsx src/index.ts",
        "audit": "node --import tsx src/index.ts --full-audit",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist coverage test-results playwright-report",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:integration": "npx playwright test",
        "test:integration:ui": "npx playwright test --ui",
        "test:integration:headed": "npx playwright test --headed",
        "test:unit-integration": "npx playwright test --project=unit-integration",
        "test:browser": "npx playwright test --project=chromium",
        "test:e2e": "npx playwright test --project=chromium",
        "test:zap": "npx playwright test --project=e2e-with-zap",
        "test:all": "npm run test && npm run test:integration",
        "report": "npx playwright show-report",
        "report:open": "npx playwright show-report --host 0.0.0.0"
    },
    "keywords": [
        "compliance",
        "security",
        "lighthouse",
        "playwright",
        "owasp-zap",
        "audit"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@types/pixelmatch": "^5.2.6",
        "@types/pngjs": "^6.0.5",
        "chalk": "^5.4.1",
        "chrome-launcher": "^1.1.0",
        "dotenv": "^17.2.3",
        "lighthouse": "^12.4.0",
        "p-limit": "^6.2.0",
        "pixelmatch": "^7.1.0",
        "playwright": "^1.40.0",
        "pngjs": "^7.0.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "@playwright/test": "^1.40.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.9",
        "eslint": "^9.18.0",
        "jest": "^30.2.0",
        "rimraf": "^6.1.2",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
